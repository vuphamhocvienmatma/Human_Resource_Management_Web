@model IEnumerable<Human_Resource_Management_Model.HRM.HR_AccountViewModel>


<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="widget-content searchable-container list">
        <div class="card card-body">
            <div class="row">
                <div class="col-md-4">
                    <form>
                        <input type="text" class="form-control product-search" id="input-search" placeholder="Search Contacts...">
                    </form>
                </div>
                <div class="col-md-8 text-right d-flex justify-content-md-end justify-content-center mt-3 mt-md-0">
                    <a asp-action="Create" id="btn-add-contact" class="btn btn-info"><i class="mdi mdi-account-multiple-plus font-16 mr-1"></i> Add Contact</a>
                </div>
            </div>
        </div>      
        <!-- Data Table -->
        <div class="card card-body">
            <div class="table-responsive">
                <table class="table table-striped search-table v-middle">
                    <thead class="header-item">
                    <th class="text-center">
                        <div class="action-btn">
                            <a href="javascript:void(0)" class="delete-multiple  text-danger"><i class="fas fa-trash font-20 font-medium"></i> Delete Row</a>
                        </div>
                    </th>
                    <th class="text-dark font-weight-bold" style="display:none"> @Html.DisplayNameFor(model => model.Id)</th>
                    <th class="text-dark font-weight-bold"> @Html.DisplayNameFor(model => model.Name)</th>
                    <th class="text-dark font-weight-bold"> @Html.DisplayNameFor(model => model.Email)</th>
                    <th class="text-dark font-weight-bold">  @Html.DisplayNameFor(model => model.Gender)</th>
                    <th class="text-dark font-weight-bold">  @Html.DisplayNameFor(model => model.Mobile1)</th>
                    <th class="text-dark font-weight-bold"> @Html.DisplayNameFor(model => model.BirthDay)</th>
                    &nbsp;
                    <th class="text-dark font-weight-bold">Nghiệp vụ xử lý</th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <!-- row -->
                            <tr class="search-items">
                                <td>
                                    <div class="n-chk align-self-center text-center">
                                        <div class="checkbox checkbox-info">
                                            <input type="checkbox" class="material-inputs contact-chkbox" id="checkbox1">
                                            <label class="" for="checkbox1"></label>
                                        </div>
                                    </div>
                                </td>
                                <td style="display:none">
                                    <span class="usr-location" data-location="Boston, USA">@Html.DisplayFor(modelItem => item.Id)</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src=@Html.DisplayFor(modelItem => item.AvatarImagePath) alt="avatar" class="rounded-circle" width="35">
                                        <div class="ml-2">
                                            <div class="user-meta-info">
                                                <h5 class="user-name mb-0" data-name="Emma Adams">@Html.DisplayFor(modelItem => item.Name)</h5>
                                                <span class="user-work text-muted" data-occupation="Web Developer">@Html.DisplayFor(modelItem => item.DutyId)</span>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="usr-email-addr" data-email="adams@mail.com">@Html.DisplayFor(modelItem => item.Email)</span>
                                </td>
                                @if (item.Gender == true)
                                {
                                    <td>
                                        <span class="usr-location" data-location="Boston, USA">Nam</span>
                                    </td>
                                }
                                @if (item.Gender == false)
                                {
                                    <td>
                                        <span class="usr-location" data-location="Boston, USA">Nữ</span>
                                    </td>
                                }
                                <td>
                                    <span class="usr-ph-no" data-phone="+1 (070) 123-4567">@Html.DisplayFor(modelItem => item.Mobile1)</span>
                                </td>
                                <td>
                                    <span class="usr-ph-no" data-phone="+1 (070) 123-4567">@Html.DisplayFor(modelItem => item.BirthDay)</span>
                                </td>
                                <td class="text-center">
                                    <div class="action-btn">
                                        <a href="javascript:void(0)" class="text-info edit"><i class="mdi mdi-account-edit font-20"></i></a>
                                        <a href="javascript:void(0)" class="text-dark delete ml-2"><i class="mdi mdi-delete font-20"></i></a>
                                    </div>
                                </td>
                            </tr>
                            <!-- /.row -->

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Page Content -->
    <!-- ============================================================== -->
</div>